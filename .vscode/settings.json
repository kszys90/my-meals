{
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "module-templates.engine": "handlebars",
    "module-templates.templates": {
        "react-component-typescript-without-folder": {
            "displayName": "react-component-typescript-without-folder",
            "defaultPath": "source/components",
            "folder": "",
            "questions": {
                "name": "Component name",
            },
            "files": [
                {
                    "name": "{{pascal name}}.tsx",
                    "content": [
                        "import React from 'react'",
                        "",
                        "export const {{pascal name}} = (props: any) => {",
                        "  const {",
                        "    children,",
                        "    ...otherProps",
                        "  } = props",
                        "",
                        "  return (",
                        "    <div",
                        "      {...otherProps}",
                        "    >",
                        "      {children}",
                        "    </div>",
                        "  )",
                        "}",
                        "",
                        "export default {{pascal name}}",
                        ""
                    ]
                }
            ]
        },
        "react-component-css-module": {
            "displayName": "React component + CSS module",
            "defaultPath": "src/components",
            "folder": "{{pascal name}}",
            "questions": {
                "name": "Component name",
            },
            "files": [
                {
                    "name": "{{pascal name}}.js",
                    "content": [
                        "import React from 'react'",
                        "import PropTypes from 'prop-types'",
                        "",
                        "import classes from './styles.module.css'",
                        "",
                        "export const {{pascal name}} = (props) => {",
                        "  const {",
                        "    className,",
                        "    ...otherProps",
                        "  } = props",
                        "",
                        "  return (",
                        "    <div",
                        "      className={`${classes.root}${className ? ` ${className}` : ''}`}",
                        "      {...otherProps}",
                        "    >",
                        "",
                        "    </div>",
                        "  )",
                        "}",
                        "",
                        "{{pascal name}}.propTypes = {",
                        "  className: PropTypes.string",
                        "}",
                        "",
                        "export default {{pascal name}}",
                        ""
                    ]
                },
                {
                    "name": "index.js",
                    "content": [
                        "export * from './{{pascal name}}'",
                        "export { default } from './{{pascal name}}'",
                        ""
                    ]
                },
                {
                    "name": "styles.module.css",
                    "content": [
                        ".root {}",
                        ""
                    ]
                }
            ]
        }
    }
}